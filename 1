#include <stdio.h>
#include <stdlib.h>

int count_digits(char* s)
{
    int i, k, cd = 0;
    char a[11];

    for(i = 0; i < 10; i++)
        a[i] = i + '0';

    for(i = 0; s[i] != 0; i++)
        for(k = 0; k < 10; k++)
            if(s[i] == a[k])
                cd++;

    return cd;
}

int main()
{
    char l[21];

    printf("Enter some text (max: 20 symbols):");
    scanf("%20s", l);
    printf("\nDigits count: %d\n", count_digits(l));

    return 0;
}
